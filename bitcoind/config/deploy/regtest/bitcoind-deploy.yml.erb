---
apiVersion: extensions/v1beta1
kind: Deployment
metadata:
  name: bitcoind
  <<: <%= partial "namespace" %>
  labels:
    app: bitcoind
  annotations:
    shipit.shopify.io/restart: "true"
spec:
  replicas: 1
  template:
    metadata:
      labels:
        app: bitcoind
    spec:
      containers:
        - name: bitcoind
          image: ruimarinho/bitcoin-core:<%= current_sha %>
          command:
            - "/entrypoint.sh"
            - "-printtoconsole"
            - "-regtest"
            - "-dbcache=512"
            - "-rpcauth=rpcuser:3564a5483d7e4b5ddd76bec7b2cefabb$62282139aa851adf1de51ab42e9eb81b10eecd7d78b61940540323f15d16cabf"
            - "-rpcallowip=0.0.0.0/0"
            - "-rpcbind=0.0.0.0:18443"
            - "-txindex=1"
            - "-server=1"
            - "-zmqpubrawblock=tcp://127.0.0.1:29000"
            - "-zmqpubrawtx=tcp://127.0.0.1:29001"
          resources:
            requests:
              cpu: 0.5
              memory: 0.5Gi
            limits:
              cpu: 1
              memory: 1Gi
          ports:
            - name: rpc-port
              containerPort: 18443
            - name: listen-port
              containerPort: 18444
            - name: zmqblock-port
              containerPort: 29000
            - name: zmqtx-port
              containerPort: 29001
          volumeMounts:
            - mountPath: /home/bitcoin/.bitcoin
              name: bitcoind-pd
      volumes:
        - name: bitcoind-pd
          persistentVolumeClaim:
            claimName: bitcoind
