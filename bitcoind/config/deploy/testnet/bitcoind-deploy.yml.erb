---
apiVersion: extensions/v1beta1
kind: Deployment
metadata:
  name: bitcoind
  <<: <%= partial "namespace" %>
  labels:
    app: bitcoind
  annotations:
    shipit.shopify.io/restart: "true"
spec:
  replicas: 1
  template:
    metadata:
      labels:
        app: bitcoind
    spec:
      containers:
        - name: bitcoind
          image: kylemanna/bitcoind:latest
          command:
            - "btc_oneshot"
            - "-testnet"
            - "-printtoconsole"
            - "-dbcache=2000"
            - "-rpcallowip=0.0.0.0/0"
            - "-txindex=1"
            - "-zmqpubrawblock=tcp://127.0.0.1:29000"
            - "-zmqpubrawtx=tcp://127.0.0.1:29001"
          resources:
            requests:
              cpu: 0.5
              memory: 4Gi
            limits:
              cpu: 1
              memory: 6Gi
          env:
            - name: RPCUSER
              value: rpcuser
            - name: RPCPASSWORD
              valueFrom:
                secretKeyRef:
                  name: bitcoind
                  key: rpcpassword
          ports:
            - name: rpc-port
              containerPort: 18332
            - name: listen-port
              containerPort: 18333
            - name: zmqblock-port
              containerPort: 29000
            - name: zmqtx-port
              containerPort: 29001
          volumeMounts:
            - mountPath: /data
              name: bitcoind-pd
      volumes:
        - name: bitcoind-pd
          persistentVolumeClaim:
            claimName: bitcoind
